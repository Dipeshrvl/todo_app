<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" >
    <title>Todo Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/style.css" />
    <script>
      const token = document.querySelector("meta[name='csrf-token']").getAttribute("content")

      const update = (id) => {
        fetch(`/todos/${id}/markascompleted`, {
          method: "put",
          headers: {
            "Content-Type": "application/json",
          },
          body : JSON.stringify({
            "_csrf" : token
          })
        })
          .then((res)=>{
            if(res.ok)
            {
              window.location.reload();
            }
          })
          .catch(err);
        {
          console.log(err);
        }
      };

        const deleteTodo = (id) => {
        fetch(`/todos/${id}`, {
          method: "delete",
          headers: {
            "Content-Type": "application/json",
          },
          body : JSON.stringify({
            "_csrf" : token
          })
        })
          .then((res)=>{
            if(res.ok)
            {
              window.location.reload();
            }
          })
          .catch(err);
        {
          console.log(err);
        }
      };

    </script>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header.ejs') %>
        <form
          action="/todos"
          method="post"
          class="flex flex-row gap-2 my-4 mb-5"
        >
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="flex-auto">
            <input
              name="title"
              type="text"
              placeholder="What's next?"
              class="border-2 text-sm p-2 rounded w-full border-gray-900"
            />
          </div>
          <div class="flex-auto">
            <input
              name="dueDate"
              type="date"
              class="border-2 text-sm p-2 rounded w-full border-gray-900 leading-4"
            />
          </div>
          <div class="flex-none">
            <button class="bg-green-600 text-white px-5 py-2 rounded">
              Add
            </button>
          </div>
        </form>
        <%- include('todos.ejs',{title: "Overdue",data: overdue,countID :
        "count-overdue"}) %> <%- include('todos.ejs',{title: "Due Today",data:
        dueToday,countID : "count-due-today"}) %> <%-
        include('todos.ejs',{title: "Due Later",data: dueLater,countID :
        "count-due-later"}) %>
      </div>
    </div>
  </body>
</html>
